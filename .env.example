# request-nest environment variables

# Environment: development, test, or production
REQUEST_NEST_ENVIRONMENT=development

# Database connection (asyncpg for application)
# Note: postgresql:// URLs are automatically converted to postgresql+asyncpg://
REQUEST_NEST_DATABASE_URL=postgresql+asyncpg://request_nest:request_nest@localhost:5832/request_nest

# Database connection for migrations (psycopg for sync migrations)
REQUEST_NEST_MIGRATION_DATABASE_URL=postgresql+psycopg://request_nest:request_nest@localhost:5832/request_nest

# Admin authentication token (change in production!)
REQUEST_NEST_ADMIN_TOKEN=dev-token-change-me

# Server configuration
REQUEST_NEST_HOST=0.0.0.0
REQUEST_NEST_PORT=8000
REQUEST_NEST_BASE_URL=http://localhost:8000
REQUEST_NEST_DEBUG=false
REQUEST_NEST_LOG_LEVEL=INFO

# Request limits
REQUEST_NEST_MAX_BODY_SIZE=1048576
